<!-- PRODUCT FORM - Create or edit product form -->
<%= form_with(model: product, multipart: true) do |form| %>
  <!-- FORM ERRORS - Displays validation errors if form has issues -->
  <% if product.errors.any? %>
    <div class="form-errors">
      <h4>Please fix the following errors:</h4>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- PRODUCT INFORMATION SECTION - Name and description -->
  <h2>Product Information</h2>

  <div class="form-field">
    <!-- PRODUCT NAME INPUT -->
    <%= form.label :name, "Product Name", class: "form-label" %>
    <%= form.text_field :name, required: true, placeholder: "e.g., Ethiopian Yirgacheffe", class: "form-input" %>
  </div>

  <div class="form-field">
    <!-- PRODUCT DESCRIPTION TEXTAREA -->
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, placeholder: "Describe your product...", class: "form-textarea" %>
  </div>

  <!-- PRODUCT IMAGES SECTION - Upload multiple product images -->
  <div id="product-images-section" style="margin: 20px 0;">
    <h3>Product Images</h3>
    <p style="color: #666; font-size: 0.9em;">Upload multiple images for this product. All variants will use these product images.</p>

    <div>
      <!-- IMAGE UPLOAD FIELD - Accepts multiple image files -->
      <%= form.label :images, "Upload Images" %><br>
      <%= form.file_field :images, multiple: true, accept: "image/jpeg,image/jpg,image/png,image/gif,image/webp", class: "form-control" %>
      <small style="color: #666;">You can select multiple images. Max 5MB per image.</small>
    </div>

    <!-- EXISTING IMAGES DISPLAY - Shows already uploaded images with remove buttons -->
    <% if product.images.attached? %>
      <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 15px;">
        <% product.images.each_with_index do |image, index| %>
          <div style="position: relative; border: 1px solid #ddd; padding: 5px; border-radius: 5px;">
            <!-- IMAGE THUMBNAIL -->
            <%= image_tag image.variant(resize_to_limit: [100, 100]), style: "width: 100px; height: 100px; object-fit: cover; border-radius: 3px;" %>
            <div style="margin-top: 5px; text-align: center;">
              <!-- REMOVE IMAGE BUTTON -->
              <%= link_to "Remove", purge_image_product_path(product, image_id: image.id),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this image?" },
                  style: "color: #dc3545; font-size: 0.8em; text-decoration: underline;" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- PRODUCT DETAILS SECTION - Roast level, drinking preference, flavour profile, equipment -->
  <h3>Product Details</h3>

  <!-- ROAST LEVEL SELECTOR -->
  <div>
    <%= form.label :roast_level, "Roast Level" %><br>
    <%= form.select :roast_level, Product.roast_levels.keys.map { |k| [k.humanize, k] }, { prompt: "Select Roast Level" }, { required: true } %>
  </div>

  <!-- DRINKING PREFERENCE SELECTOR -->
  <div>
    <%= form.label :drinking_preference, "Drinking Preference" %><br>
    <%= form.select :drinking_preference, Product.drinking_preferences.keys.map { |k| [k.humanize, k] }, { prompt: "Select Drinking Preference" }, { required: true } %>
  </div>

  <!-- FLAVOUR PROFILE SELECTOR -->
  <div>
    <%= form.label :flavour_profile, "Flavour Profile" %><br>
    <%= form.select :flavour_profile, Product.flavour_profiles.keys.map { |k| [k.humanize, k] }, { prompt: "Select Flavour Profile" }, { required: true } %>
  </div>

  <!-- EQUIPMENT SELECTOR -->
  <div>
    <%= form.label :equipment, "Recommended Equipment" %><br>
    <%= form.select :equipment, Product.equipment.keys.map { |k| [k.humanize, k] }, { prompt: "Select Equipment" }, { required: true } %>
  </div>

  <!-- PRICING & INVENTORY SECTION -->
  <h3>Pricing & Inventory</h3>

  <!-- VARIANT TOGGLE - Checkbox to switch between simple product and variant product modes -->
  <div style="margin-bottom: 20px; padding: 15px; background: #f5f5f5; border-radius: 5px;">
    <label>
      <!-- HAS VARIANTS CHECKBOX - Toggles between simple and variant product forms -->
      <input type="checkbox" id="has_variants_checkbox" value="true">
      <strong>This product has variants (different sizes/grinds with different prices)</strong>
    </label>
    <p style="font-size: 0.9em; color: #666; margin-top: 5px;">
      Check this if you want to sell this product in different sizes (250g, 500g, 1000g) and grinds (wholebean, aeropress, etc.) with different prices.
      <strong>Note:</strong> When using variants, upload images for each variant instead of the product.
    </p>
  </div>

  <!-- SIMPLE PRODUCT FIELDS - Shown when product has no variants -->
  <div id="simple-product-fields">
    <h4>Simple Product (No Variants)</h4>
    <!-- PRICE INPUT -->
    <div>
      <%= form.label :price, "Price" %><br>
      <%= form.number_field :price, step: 0.01, min: 0, placeholder: "0.00" %>
    </div>
    <!-- STOCK QUANTITY INPUT -->
    <div>
      <%= form.label :inventory_quantity, "Stock Quantity" %><br>
      <%= form.number_field :inventory_quantity, min: 0, value: product.inventory_quantity || 0 %>
    </div>
  </div>

  <!-- VARIANT PRODUCT FIELDS - Shown when product has variants (hidden by default) -->
  <div id="variant-product-fields" style="display: none;">
    <h4>Product Variants</h4>
    <p style="color: #666; margin-bottom: 15px;">
      Add variants for different size and grind combinations. Each variant can have its own price, stock level, and images.
    </p>

    <div data-controller="bulk-variants" data-bulk-variants-start-index-value="<%= @product.variants.size %>" style="background: #f8f9fa; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
      <h5 style="margin-top: 0; color: #333;">Quick Add Variants</h5>
      <p style="color: #666; font-size: 0.9em; margin-bottom: 15px;">
        Select a size and price, then check multiple grinds to create several variants at once.
      </p>

      <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px; margin-bottom: 15px;">
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Size *</label>
          <select data-bulk-variants-target="size" data-action="change->bulk-variants#updatePreview" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
            <option value="">Select Size</option>
            <option value="_250g">250g</option>
            <option value="_500g">500g</option>
            <option value="_1000g">1000g</option>
          </select>
        </div>

        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Price *</label>
          <input type="number" data-bulk-variants-target="price" data-action="input->bulk-variants#updatePreview" step="0.01" min="0" placeholder="0.00" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: 500;">Stock Quantity *</label>
          <input type="number" data-bulk-variants-target="inventory" data-action="input->bulk-variants#updatePreview" min="0" value="0" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 10px; font-weight: 500;">Select Grinds *</label>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 10px;">
          <% Variant.grinds.keys.each do |grind| %>
            <label style="display: flex; align-items: center; padding: 8px; background: white; border: 1px solid #ddd; border-radius: 4px; cursor: pointer; transition: all 0.2s;">
              <input type="checkbox" value="<%= grind %>" data-bulk-variants-target="grindCheckbox" data-action="change->bulk-variants#updatePreview" style="margin-right: 8px;">
              <span><%= grind.humanize %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div data-bulk-variants-target="preview" style="margin-bottom: 15px;">
        <p style="color: #666;">Select size, price, and at least one grind to see preview...</p>
      </div>

      <button type="button" data-action="click->bulk-variants#addVariants" style="padding: 10px 20px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; font-weight: 500;">
        + Add Selected Variants
      </button>
    </div>

    <div id="variants-container">
      <%= form.fields_for :variants do |variant_form| %>
        <%= render "variant_fields", form: variant_form %>
      <% end %>
    </div>

    <button type="button" id="add-variant-btn" style="margin-top: 10px; padding: 8px 15px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">
      + Add Single Variant Manually
    </button>
  </div>

  <!-- FORM SUBMIT BUTTON -->
  <div style="margin-top: 30px;">
    <%= form.submit product.persisted? ? "Update Product" : "Create Product", style: "padding: 10px 20px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
  </div>
<% end %>

<!-- JAVASCRIPT FOR VARIANT TOGGLE AND FORM GENERATION -->
<script>
  (function() {
    let isInitialized = false;

    // Wait for DOM to be ready
    function initVariantToggle() {
      if (isInitialized) {
        return;
      }
      isInitialized = true;

      const checkbox = document.getElementById('has_variants_checkbox');
      const simpleFields = document.getElementById('simple-product-fields');
      const variantFields = document.getElementById('variant-product-fields');
      const addVariantBtn = document.getElementById('add-variant-btn');
      const variantsContainer = document.getElementById('variants-container');

      if (!checkbox || !simpleFields || !variantFields) {
        console.error('Required elements not found');
        isInitialized = false;
        return;
      }

      function addVariantForm() {
        const variantIndex = variantsContainer.children.length + <%= @product.variants.size %>;
        const variantHtml = `
          <div class="nested-fields" style="border: 1px solid #ddd; padding: 15px; margin-bottom: 15px; border-radius: 5px; background: white;">
            <h5>Variant ${variantIndex + 1}</h5>
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr auto; gap: 15px;">
              <div>
                <label>Size</label>
                <select name="product[variants_attributes][${variantIndex}][size]" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                  <option value="">Select Size</option>
                  <option value="_250g">250g</option>
                  <option value="_500g">500g</option>
                  <option value="_1000g">1000g</option>
                </select>
              </div>
              <div>
                <label>Grind</label>
                <select name="product[variants_attributes][${variantIndex}][grind]" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                  <option value="">Select Grind</option>
                  <% Variant.grinds.keys.each do |grind| %>
                    <option value="<%= grind %>"><%= grind.humanize %></option>
                  <% end %>
                </select>
              </div>
              <div>
                <label>Price</label>
                <input type="number" name="product[variants_attributes][${variantIndex}][price]" step="0.01" min="0" placeholder="0.00" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
              </div>
              <div>
                <label>Stock Quantity</label>
                <input type="number" name="product[variants_attributes][${variantIndex}][inventory_quantity]" min="0" value="0" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
              </div>
              <div>
                <button type="button" onclick="this.closest('.nested-fields').remove()" style="padding: 8px 15px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer;">
                  Remove
                </button>
              </div>
            </div>
          </div>
        `;
        variantsContainer.insertAdjacentHTML('beforeend', variantHtml);
      }

      checkbox.addEventListener('change', function() {
        if (this.checked) {
          simpleFields.style.display = 'none';
          variantFields.style.display = 'block';
        } else {
          simpleFields.style.display = 'block';
          variantFields.style.display = 'none';
        }
      });

      // Set initial state based on whether product has variants
      <% if product.has_variants? || product.variants.any? %>
        checkbox.checked = true;
        simpleFields.style.display = 'none';
        variantFields.style.display = 'block';
      <% end %>

      // Handle add variant button click
      if (addVariantBtn) {
        addVariantBtn.addEventListener('click', function(e) {
          e.preventDefault();
          addVariantForm();
        });
      }
    }

    // Initialize once when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initVariantToggle);
    } else {
      initVariantToggle();
    }
  })();
</script>


