<h1>Norakkan Store</h1>

<%= link_to "New Product", new_product_path %>

<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; margin-top: 20px;">
  <% @products.each do |product| %>
    <div style="border: 1px solid #ddd; border-radius: 8px; overflow: hidden; background: white;">
      <%= link_to product_path(product) do %>
        <% if product.primary_image %>
          <%= image_tag product.primary_image.variant(resize_to_limit: [500, 500]), style: "width: 100%; height: 250px; object-fit: cover;" %>
        <% else %>
          <div style="width: 100%; height: 250px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #999;">
            No image
          </div>
        <% end %>
        <div style="padding: 15px;">
          <h3 style="margin: 0 0 10px 0;"><%= product.name %></h3>
          <p style="color: #666; margin: 0;"><%= number_to_currency(product.price) %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
