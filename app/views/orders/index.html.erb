<!-- ORDER HISTORY PAGE -->
<div class="order-history">
  <h1>My Orders</h1>

  <% if @orders.empty? %>
    <div class="no-orders">
      <p>You haven't placed any orders yet.</p>
      <%= link_to "Start Shopping", products_path, class: "btn btn-primary" %>
    </div>
  <% else %>
    <!-- ORDERS LIST -->
    <div class="orders-list">
      <% @orders.each do |order| %>
        <div class="order-card">
          <div class="order-header">
            <div class="order-number">
              <strong><%= order.display_order_number %></strong>
            </div>
            <div class="order-date">
              <%= order.created_at.strftime("%B %d, %Y") %>
            </div>
            <div class="order-status">
              <span class="status-badge status-<%= order.status %>">
                <%= order.status.humanize %>
              </span>
            </div>
          </div>

          <div class="order-summary-compact">
            <div class="order-item-count">
              <%= order.order_items.sum(:quantity) %> items
            </div>
            <div class="order-total">
              â‚¹<%= number_with_precision(order.total, precision: 2) %>
            </div>
          </div>

          <div class="order-actions">
            <%= link_to "View Details", order_path(order), class: "btn btn-sm btn-secondary" %>
            <%= link_to "Reorder", products_path, class: "btn btn-sm btn-outline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
